{
  "name": "catholic-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Catholic Information Platform - Modern API & Website",
  "author": "Catholic Platform Team",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "seed": "tsx scripts/seeds/index.ts",
    "seed:admin": "tsx scripts/seeds/01-admin-user.ts",
    "seed:categories": "tsx scripts/seeds/02-categories.ts",
    "seed:settings": "tsx scripts/seeds/03-settings.ts",
    "seed:bible-books": "tsx scripts/seeds/04-bible-books.ts",
    "import:bible": "tsx scripts/import/bible-importer.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "prettier": "^3.3.3",
    "tsx": "^4.20.6",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
