{
  "name": "@catholic-platform/api",
  "version": "1.0.0",
  "private": true,
  "description": "Catholic Platform API - Hono Backend",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "format": "biome format --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.1",
    "@hono/swagger-ui": "^0.4.1",
    "@hono/zod-validator": "^0.3.0",
    "arctic": "^1.9.2",
    "drizzle-orm": "^0.34.1",
    "hono": "^4.6.3",
    "ioredis": "^5.4.1",
    "oslo": "^1.2.1",
    "postgres": "^3.4.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.8.6",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.25.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
